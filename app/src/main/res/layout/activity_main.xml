<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 相关"
        android:textSize="24sp"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/service_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service 相关"
        android:textSize="24sp"
        android:layout_margin="20dp" />


    <TextView
        android:id="@+id/sendBroadcast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:text="BroadcastReceiver 相关"
        android:textSize="24sp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/content_provider_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContentProvider 相关"
        android:textSize="24sp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/rv_tv"
        android:layout_width="193dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:text="RecycleView 相关"
        android:textSize="24sp"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/lazy_load_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="348dp"
        android:text="懒加载"
        android:textSize="24sp"
        android:layout_margin="20dp"/>




</LinearLayout>