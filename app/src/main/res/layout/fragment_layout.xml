<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是fragment"
        android:layout_margin="20dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/fragment_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:text="fragment.startActivityForResult"
        />

    <Button
        android:id="@+id/getActivity_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:text="getActivity().startActivityForResult"
        />

    <Button
        android:id="@+id/show_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:text="show DialogFragment"
        />

    <Button
        android:id="@+id/show_lazy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:text="Fragment 懒加载"
        />
</LinearLayout>
